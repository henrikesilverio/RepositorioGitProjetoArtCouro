        <![endif]-->
<!-- Demo purpose only -->
<script src="/js/demo.js"></script>
<script src="/js/app.js"></script>
<script src="/js/app/Portal.js" type="text/javascript"></script>
<script type="text/javascript">

    pageSetUp();

    $("#Login").click(function () {
        var valid = $("#login-for").valid();
        if (valid) {
            $("#login-for").submit();
        };
    });

</script>
@RenderSection("Scripts", false)
</html>
