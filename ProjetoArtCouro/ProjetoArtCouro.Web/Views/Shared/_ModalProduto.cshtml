@using ProjetoArtCouro.Resource.Resources
@if (Request.Path.Contains("Produto"))
{
    <div class="modal fade" id="modalProduto" role="dialog">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">@Mensagens.Product</h4>
                </div>
                <div class="modal-body">
                    <form id="formModalProduto" class="smart-form" novalidate="novalidate">
                        <div class="row">
                            <section class="col col-xs-12 col-sm-8 col-md-8 col-lg-8">
                                <label class="label" for="ModalProdutoDescricao">@Mensagens.Description</label>
                                <label class="input">
                                    <input data-val="true" data-val-required="@Erros.RequiredField" id="ModalProdutoDescricao"
                                           name="Descricao" placeholder="@Mensagens.Description" maxlength="200" type="text" value="">
                                </label>
                                <span class="field-validation-valid" data-valmsg-for="Descricao" data-valmsg-replace="true"></span>
                            </section>
                            <section class="col col-xs-12 col-sm-4 col-md-4 col-lg-4">
                                <label class="label" for="ModalProdutoUnidadeId">@Mensagens.Description</label>
                                <label class="select">
                                    <select data-val="true" data-val-required="@Erros.RequiredField" id="ModalProdutoUnidadeId" name="UnidadeId">
                                        <option value="">@Mensagens.Select</option>
                                        <option value="1">KG – Quilograma</option>
                                        <option value="2">LT – Litro</option>
                                        <option value="3">UN – Unidade</option>
                                        <option value="4">MT – Metro linear</option>
                                        <option value="5">M2 – Metro quadrado</option>
                                        <option value="6">M3 – Metro cúbico</option>
                                    </select>
                                    <i></i>
                                </label>
                                <span class="field-validation-valid" data-valmsg-for="UnidadeId" data-valmsg-replace="true"></span>
                            </section>
                        </div>
                        <div class="row">
                            <section class="col col-xs-12 col-sm-4 col-md-4 col-lg-4">
                                <label class="label" for="ModalProdutoPrecoCusto">@Mensagens.PriceCost</label>
                                <label class="input">
                                    <input data-val="true" data-val-required="@Erros.RequiredField" id="ModalProdutoPrecoCusto"
                                           name="PrecoCusto" placeholder="@Mensagens.PriceCost" class="DinheiroMask" maxlength="12" type="text" value="">
                                </label>
                                <span class="field-validation-valid" data-valmsg-for="PrecoCusto" data-valmsg-replace="true"></span>
                            </section>
                            <section class="col col-xs-12 col-sm-4 col-md-4 col-lg-4">
                                <label class="label" for="ModalProdutoPrecoVenda">@Mensagens.PriceSale</label>
                                <label class="input">
                                    <input data-val="true" data-val-required="@Erros.RequiredField" id="ModalProdutoPrecoVenda"
                                           name="PrecoVenda" placeholder="@Mensagens.PriceSale" class="DinheiroMask" maxlength="12" type="text" value="">
                                </label>
                                <span class="field-validation-valid" data-valmsg-for="PrecoVenda" data-valmsg-replace="true"></span>
                            </section>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <a class="btn btn-labeled btn-default" href="javascript:void(0);" data-dismiss="modal">
                        <span class="btn-label"><i class="fa fa-times"></i></span> @Mensagens.Close
                    </a>
                    <a id="AtualizarProduto" class="btn btn-labeled btn-primary" href="javascript:void(0);">
                        <span class="btn-label"><i class="fa fa-floppy-o"></i></span> @Mensagens.Save
                    </a>
                </div>
            </div>
        </div>
    </div>
}