@using ProjetoArtCouro.Resource.Resources
@if (Request.Path.Contains("Venda"))
{
    <div class="modal fade" id="modalEfetivarVenda" role="dialog">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">@Mensagens.MakeSales</h4>
                </div>
                <div class="modal-body">
                    <form id="formModalEfetivarVenda" class="smart-form" novalidate="novalidate">
                        <div class="row">
                            <section class="col col-xs-12 col-sm-6 col-md-6 col-lg-6">
                                <label class="label" for="ClienteId">@Mensagens.Customers</label>
                                <label class="select">
                                    <select data-val="true" data-val-required="@Erros.RequiredField" id="ClienteId" name="ClienteId">
                                        <option value="">@Mensagens.Select</option>
                                    </select>
                                </label>
                                <span class="field-validation-valid" data-valmsg-for="ClienteId" data-valmsg-replace="true"></span>
                            </section>
                            <section class="col col-xs-12 col-sm-3 col-md-3 col-lg-3">
                                <label class="label" for="FormaPagamentoId">@Mensagens.FormsPayment</label>
                                <label class="select">
                                    <select data-val="true" data-val-required="@Erros.RequiredField" id="FormaPagamentoId" name="FormaPagamentoId">
                                        <option value="">@Mensagens.Select</option>
                                    </select>
                                    <i></i>
                                </label>
                                <span class="field-validation-valid" data-valmsg-for="FormaPagamentoId" data-valmsg-replace="true"></span>
                            </section>
                            <section class="col col-xs-12 col-sm-3 col-md-3 col-lg-3">
                                <label class="label" for="CondicaoPagamentoId">@Mensagens.ConditionsPayments</label>
                                <label class="select">
                                    <select data-val="true" data-val-required="@Erros.RequiredField" id="CondicaoPagamentoId" name="CondicaoPagamentoId">
                                        <option value="">@Mensagens.Select</option>
                                    </select>
                                    <i></i>
                                </label>
                                <span class="field-validation-valid" data-valmsg-for="CondicaoPagamentoId" data-valmsg-replace="true"></span>
                            </section>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <a class="btn btn-labeled btn-default" href="javascript:void(0);" data-dismiss="modal">
                        <span class="btn-label"><i class="fa fa-times"></i></span> @Mensagens.Close
                    </a>
                    <a id="Vender" class="btn btn-labeled btn-primary" href="javascript:void(0);">
                        <span class="btn-label"><i class="fa fa-floppy-o"></i></span> @Mensagens.Sell
                    </a>
                </div>
            </div>
        </div>
    </div>
}