@model ProjetoArtCouro.Model.Models.Cliente.PesquisaClienteModel
@using ProjetoArtCouro.Resource.Resources


<div class="jarviswidget jarviswidget-sortable"
     data-widget-editbutton="true" data-widget-colorbutton="true"
     data-widget-fullscreenbutton="true" data-widget-collapsed="true"
     data-widget-custombutton="true" data-widget-togglebutton="true"
     data-widget-sortable="true" data-widget-deletebutton="true" role="widget" style="">
    <header role="heading">
        <span class="widget-icon"><i class="fa fa-edit"></i></span>
        <h2>@Mensagens.SearchCliente </h2>
        <span class="jarviswidget-loader"><i class="fa fa-refresh fa-spin"></i></span>
    </header>
    <div role="content">
        <div id="AlertaMensagens" class="col-xs-12 col-sm-12 col-md-12 col-lg-12 no-padding"></div>
        <div class="widget-body no-padding">
            <form id="formPesquisaCliente" class="smart-form" novalidate="novalidate">
                <fieldset class="col col-xs-12 col-sm-12 col-md-12 col-lg-12">
                    <div class="row">
                        <section class="col col-xs-12 col-sm-8 col-md-8 col-lg-7">
                            @Html.LabelFor(m => m.Nome, new { @class = "label" })
                            <label class="input">
                                @Html.TextBoxFor(m => m.Nome, new { placeholder = @Mensagens.Name })
                            </label>
                        </section>
                        <section class="col col-xs-12 col-sm-4 col-md-4 col-lg-5">
                            @Html.LabelFor(m => m.CPFCNPJ, new { @class = "label" })
                            <label class="input">
                                @Html.TextBoxFor(m => m.CPFCNPJ, new { placeholder = @Mensagens.CPFCNPJ })
                            </label>
                        </section>
                    </div>
                    <div class="row">
                        <section class="col col-xs-12 col-sm-6 col-md-6 col-lg-6">
                            @Html.LabelFor(m => m.Email, new { @class = "label" })
                            <label class="input">
                                @Html.TextBoxFor(m => m.Email, new { placeholder = @Mensagens.Email })
                            </label>
                        </section>
                        <section class="col col-xs-12 col-sm-6 col-md-6 col-lg-6">
                            @Html.LabelFor(m => m.CodigoCliente, new { @class = "label" })
                            <label class="input">
                                @Html.TextBoxFor(m => m.CodigoCliente, new { placeholder = @Mensagens.Code })
                            </label>
                        </section>
                    </div>
                </fieldset>
                <footer>
                    <a id="PesquisarCliente" class="btn btn-primary" href="javascript:void(0);">
                        <i class="fa fa-search"></i> @Mensagens.Research
                    </a>
                    <a id="NovoCliente" class="btn btn-success" href="@Url.Action("NovoCliente", "Cliente")">
                        <i class="fa fa-file-o"></i> @Mensagens.New
                    </a>
                </footer>
            </form>
            <fieldset class="col col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <table id="datatableCliente" class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>Column 1</th>
                            <th>Column 2</th>
                            <th>Column 3</th>
                            <th>Column 4</th>
                            <th>Column 5</th>
                        </tr>
                    </thead>
                    <tbody>
                    
                    </tbody>
                </table>
            </fieldset>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/js/app/Search.js"></script>
    <script>
        Portal.Mask();
        Portal.Form({
            Button: $("#Salvar"),
            Form: $("#smart-form-register")
        });
        Portal.Search({
            AlertaMensagensSeletor: "#AlertaMensagens",
            BotaoPesquisarSeletor: "#PesquisarCliente",
            FormularioSeletor: "#formPesquisaCliente",
            UrlDados: "@Url.Action("PesquisaCliente", "Cliente")",
            TabelaSeletor: "#datatableCliente",
            TituloRodape: "",
            InformacaoTabela: "",
            OrdenacaoDoCabecalho: [
                { "sTitle": "@(Mensagens.Code)", "mData": "Codigo", "sClass": "center", "sWidth": "20%" },
                { "sTitle": "@(Mensagens.Name)", "mData": "Nome", "sClass": "center", "sWidth": "20%" },
                {
                    "sTitle": "@(Mensagens.CPFCNPJ)",
                    "mData": null,
                    "sClass": "center",
                    "sWidth": "20%",
                    "fnRender": function (obj) {
                        return obj.aData.CPF !== "" ? obj.aData.CPF : obj.aData.CNPJ;
                    }
                },
                { "sTitle": "@(Mensagens.Email)", "mData": "MeioComunicacao.Email", "sClass": "center", "sWidth": "20%" },
                {
                    "sTitle": "@(Mensagens.Actions)",
                    "mData": null,
                    "sClass": "center",
                    "bSortable": false,
                    "sWidth": "20%",
                    "fnRender": function (obj) {
                        return "<a href=\"@Url.Action("PesquisaCliente", "Cliente")\" class=\"fa fa-pencil-square-o\" title=\"Editar\"></a>";
                    }
                }
            ]
        });
    </script>
}
