@model ProjetoArtCouro.Model.Models.Login.LoginModel
@using ProjetoArtCouro.Web.Extensions.HtmlHelperExtensions

@{
    ViewBag.Title = "Login";
}
<div id="main" role="main">
    <!-- MAIN CONTENT -->
    <div id="content" class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-7 col-lg-8 hidden-xs hidden-sm">
                <h1 class="txt-color-red login-header-big">Art Couro</h1>
                <div class="hero">
                    <div class="pull-left login-desc-box-l">
                        <h4 class="paragraph-header">Seja bem vindo ao Portal do Usuário</h4>
                    </div>
                </div>
            </div>
            <div class="col-xs-12 col-sm-12 col-md-5 col-lg-4">
                <div class="well no-padding">
                    @using (Html.BeginForm("Index", "Login", FormMethod.Post, new { @id = "login-for", @class = "smart-form client-form" }))
                    {
                        <header>
                            Login
                        </header>
                        <fieldset>
                            @Html.ValidationSummaryBootstrap()
                            <section>
                                @Html.LabelFor(m => m.UsuarioNome, new { @class = "label" })
                                <label class="input">
                                    <i class="icon-append fa fa-user"></i>
                                    @Html.TextBoxFor(m => m.UsuarioNome)
                                    <b class="tooltip tooltip-top-right"><i class="fa fa-user txt-color-teal"></i>Por favor digite o nome</b>
                                </label>
                                @Html.ValidationMessageFor(m => m.UsuarioNome)
                            </section>

                            <section>
                                @Html.LabelFor(m => m.Senha, new { @class = "label" })
                                <label class="input">
                                    <i class="icon-append fa fa-lock"></i>
                                    @Html.PasswordFor(m => m.Senha)
                                    <b class="tooltip tooltip-top-right"><i class="fa fa-lock txt-color-teal"></i>Digite sua senha</b>
                                </label>
                                @Html.ValidationMessageFor(m => m.Senha)
                            </section>

                            <section>
                                <label class="checkbox">
                                    <input type="checkbox" name="remember" checked="">
                                    <i></i>Continuar conectado
                                </label>
                            </section>
                        </fieldset>
                        <footer>
                            <button id="Login" type="button" class="btn btn-primary">
                                Login
                            </button>
                        </footer>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

