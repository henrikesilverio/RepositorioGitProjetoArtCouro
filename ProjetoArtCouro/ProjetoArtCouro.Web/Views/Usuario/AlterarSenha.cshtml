@model  ProjetoArtCouro.Model.Models.Usuario.UsuarioModel
@using ProjetoArtCouro.Resource.Resources

<div class="jarviswidget jarviswidget-sortable"
     data-widget-editbutton="true" data-widget-colorbutton="true"
     data-widget-fullscreenbutton="true" data-widget-collapsed="true"
     data-widget-custombutton="true" data-widget-togglebutton="true"
     data-widget-sortable="true" data-widget-deletebutton="true" role="widget" style="">
    <header role="heading">
        <span class="widget-icon"><i class="fa fa-edit"></i></span>
        <h2>@ViewBag.SubTitle </h2>
        <span class="jarviswidget-loader"><i class="fa fa-refresh fa-spin"></i></span>
    </header>
    <div role="content">
        <div class="widget-body no-padding">
            <form id="formularioAlterarSenha" class="smart-form" novalidate="novalidate">
                <fieldset class="col col-xs-12 col-sm-12 col-md-12 col-lg-12">
                    <div class="row">
                        <section id="AlertaMensagens" class="col col-xs-12 col-sm-12 col-md-12 col-lg-12 no-margin"></section>
                    </div>
                    <div class="row">
                        <section class="col col-xs-12 col-sm-4 col-md-4 col-lg-4">
                            @Html.LabelFor(m => m.Senha, new { @class = "label" })
                            <label class="input">
                                @Html.PasswordFor(m => m.Senha, new { placeholder = @Mensagens.Password, MaxLength = "10" })
                            </label>
                            @Html.ValidationMessageFor(m => m.Senha)
                        </section>
                        <section class="col col-xs-12 col-sm-4 col-md-4 col-lg-4">
                            @Html.LabelFor(m => m.ConfirmarSenha, new { @class = "label" })
                            <label class="input">
                                @Html.PasswordFor(m => m.ConfirmarSenha, new { placeholder = @Mensagens.ConfirmPassword, MaxLength = "10" })
                            </label>
                            @Html.ValidationMessageFor(m => m.ConfirmarSenha)
                        </section>
                    </div>
                </fieldset>
                <footer>
                    <a id="AlterarSenha" class="btn btn-labeled btn-primary" href="javascript:void(0);">
                        <span class="btn-label"><i class="fa fa-floppy-o"></i></span> @Mensagens.Save
                    </a>
                </footer>
            </form>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/js/app/Usuario/Usuario.js"></script>
    <script>
        Portal.Mask();
        Portal.AlterarSenha({
            UrlDados: '@Url.Action("AlterarSenha", "Usuario")',
            AlertaMensagensSeletor: "#AlertaMensagens",
            $BotaoSalvar: $("#AlterarSenha"),
            $Formulario: $("#formularioAlterarSenha")
        });
    </script>
}